@model LibOnline.Models.Genre

@{
    ViewBag.Title = "Редактирование жанра";
}
<div class="mrn-top-70">
    <h1>@ViewBag.Title</h1>
    <hr />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.GenreId)      

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Введите описание жанра" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Сохранить изменения" class="btn btn-xs btn-success" />
            </div>
        </div>
    </div>
                    }

<div class="mrn-bottom-70">
    <a href="/Genre?GenreId=@Model.GenreId">Вернуться к жанру</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}


