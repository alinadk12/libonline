@model List<LibOnline.Models.Book>

@{
    ViewBag.Title = "Избранные книги";
}

<div class="mrn-top-70">
    <h1>@ViewBag.Title</h1>
    <hr />
</div>

<div class="row">
    @if (Model.Count < 1)
    {
        <div class="col-md-12">У Вас нет книг в избранном.</div>
    }
    else
    {
        <div class="col-md-12">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Авторы</th>
                        <th>Жанры</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var m in Model)
                    {
                        <tr>
                            <td><a href="/Book?BookId=@m.BookId">@m.Title</a></td>
                            <td>@m.Authors</td>
                            <td>@m.Genres</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>


@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")